extends layouts/main.pug

block content
    .form-container
        form(action=routes.changePassword, method="post")
            input(type="text", name="currentPwd", placeholder="Current Password")
            input(type="text", name="newPwd", placeholder="New Password")
            input(type="text", name="newPwd2", placeholder="Verify New Password")
            input(type="submit", value="Change Password")